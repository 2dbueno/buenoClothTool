<Window x:Class="grzyClothTool.Views.IgnoredListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Manage Ignored Groups" 
        Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Brush50}"
        Foreground="{DynamicResource Brush900}">

    <Window.Resources>
        <Style TargetType="Button" x:Key="SmallActionButton">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="{DynamicResource Brush100}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush300}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush900}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource Brush200}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Ignored Groups (Whitelist)" 
                       FontSize="20" FontWeight="Bold" 
                       Foreground="{DynamicResource Brush900}"/>
            <TextBlock Text="These groups are being ignored by the Duplicate Detector." 
                       FontSize="12" Foreground="{DynamicResource Brush600}" Margin="0,5,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" 
                Background="{DynamicResource Brush100}" 
                BorderBrush="{DynamicResource Brush300}" 
                BorderThickness="1" 
                CornerRadius="4">
            <ListBox x:Name="IgnoredListBox" 
                     Background="Transparent" 
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Duplicate Group Hash:" FontSize="10" Foreground="{DynamicResource Brush500}"/>
                                <TextBlock Text="{Binding}" FontSize="12" FontFamily="Consolas" Foreground="{DynamicResource Brush900}"/>
                            </StackPanel>

                            <Button Grid.Column="1" 
                                    Content="Remove from Whitelist" 
                                    Click="RemoveIgnored_Click"
                                    Tag="{Binding}"
                                    Style="{StaticResource SmallActionButton}"
                                    Margin="10,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <Button Grid.Row="2" 
                Content="Close" 
                Click="Close_Click"
                HorizontalAlignment="Right"
                Style="{StaticResource SmallActionButton}"
                Width="80" Height="30"
                Margin="0,15,0,0"/>
    </Grid>
</Window>